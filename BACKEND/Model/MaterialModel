const mongoose=require("mongoose");
const Schema=mongoose.Schema;

const materialSchema=new Schema({
    materialID:{
        type:String, //data type
        required:true, //validate
    },
    name:{
        type:String, //data type
        required:true, //validate
    },
    type:{
        type:String,
        required:true,
    },
    grade:{
        type:String, //data type
        required:true, //validate
    },
    supplier:{
        type:Number, //data type
        required:true, //validate
    },
    unit:{
        type:String,
        required:true,
    },
    unitweight:{
        type:Number,
        required:true,
    },
    unitcost:{
        type:Number,
        required:true,
    },
    quantity:{
        type:Number, //data type
        required:true, //validate
    },
    description:{
        type:String,
        required:true,
    },
});

module.exports=mongoose.model(
    "MaterialModel", //file name
    materialSchema //function name
)

 